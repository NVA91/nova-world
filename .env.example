# ============================================================================
# .env.example - Unified Ansible Project
# ============================================================================
# Kopiere diese Datei zu .env und passe die Werte an deine Umgebung an.
#
# Verwendung:
#   cp .env.example .env
#   nano .env

# ============================================================================
# DOCKER & COMPOSE KONFIGURATION
# ============================================================================

# Projekt-Name (wird für Container-Namen verwendet)
COMPOSE_PROJECT_NAME=unified-ansible-project

# Docker-Image-Tag
DOCKER_TAG=latest

# ============================================================================
# ANSIBLE KONFIGURATION
# ============================================================================

# Ansible-Verbosity-Level (0-4)
# 0 = normal, 1 = verbose (-v), 2 = very verbose (-vv), etc.
ANSIBLE_VERBOSITY=0

# Ansible Host-Key-Checking
ANSIBLE_HOST_KEY_CHECKING=False

# Ansible-Forks (Anzahl paralleler Prozesse)
ANSIBLE_FORKS=5

# Ansible-Timeout (in Sekunden)
ANSIBLE_TIMEOUT=10

# Ansible-Inventory-Pfad (für Controller)
ANSIBLE_INVENTORY=./inventory

# Ansible-Rollen-Pfad (für Controller)
ANSIBLE_ROLES_PATH=./roles

# Ansible-Library-Pfad (für Custom Modules)
ANSIBLE_LIBRARY=./library

# Ansible-Lookup-Plugins-Pfad
ANSIBLE_LOOKUP_PLUGINS=./lookup_plugins

# ============================================================================
# SSH KONFIGURATION
# ============================================================================

# SSH-Benutzer für Remote-Hosts
SSH_USER=ubuntu

# SSH-Port
SSH_PORT=22

# SSH-Timeout (in Sekunden)
SSH_TIMEOUT=10

# SSH-Key-Pfad (relativ zum Projekt-Root)
# Wird in den Container gemountet
SSH_KEY_PATH=.ssh

# ============================================================================
# ANSIBLE VAULT KONFIGURATION
# ============================================================================

# Pfad zur Vault-Passwort-Datei (optional)
# ANSIBLE_VAULT_PASSWORD_FILE=.vault_pass

# ============================================================================
# PROXMOX KONFIGURATION (für Produktions-Deployment)
# ============================================================================

# Proxmox-Host IP-Adresse
PROXMOX_HOST=192.168.1.100

# Proxmox-API-Benutzer
PROXMOX_USER=root@pam

# Proxmox-API-Token (empfohlen) oder Passwort
# PROXMOX_API_TOKEN_ID=ansible@pve!token
# PROXMOX_API_TOKEN_SECRET=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# ============================================================================
# DEPLOYMENT-PROFIL KONFIGURATION
# ============================================================================

# Standard-Deployment-Profil (minimal, standard, full, custom, repair)
DEPLOYMENT_PROFILE=standard

# ============================================================================
# NETZWERK KONFIGURATION
# ============================================================================

# Netzwerk-Bridge auf Proxmox
PVE_BRIDGE=vmbr0

# Gateway-IP
PVE_GATEWAY=192.168.1.1

# DNS-Server
PVE_DNS=8.8.8.8,8.8.4.4

# ============================================================================
# PROXY KONFIGURATION (optional)
# ============================================================================

# HTTP-Proxy
HTTP_PROXY=

# HTTPS-Proxy
HTTPS_PROXY=

# No-Proxy-Liste
NO_PROXY=localhost,127.0.0.1

# ============================================================================
# DEBUGGING & LOGGING
# ============================================================================

# Debug-Modus (true/false)
DEBUG=false

# Log-Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ============================================================================
# PYTHON KONFIGURATION
# ============================================================================

# Python-Unbuffered-Output
PYTHONUNBUFFERED=1

# Python-Dont-Write-Bytecode
PYTHONDONTWRITEBYTECODE=1

# ============================================================================
# HINWEISE
# ============================================================================
# 
# 1. Diese Datei NICHT in Git committen!
# 2. Sensible Daten (Passwörter, API-Keys) gehören in Ansible Vault
# 3. SSH-Keys sollten NICHT im Repository liegen
# 4. Für Produktions-Deployments: setup_prod_env.sh verwenden
